# =============================================================================
# CV-REFORMATTER - Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=cv_reformatter

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=

# =============================================================================
# APP
# =============================================================================
APP_PORT=3000
NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Compatible avec tous les LLM utilisant le format OpenAI Chat Completions.
# Exemples: OpenAI, Mistral, Groq, Together AI, DeepSeek, etc.

LLM_API_KEY=your-api-key-here
LLM_ENDPOINT=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-4o
LLM_MAX_TOKENS=8192

# =============================================================================
# BACKBLAZE B2 (S3-compatible storage)
# =============================================================================
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com
B2_REGION=us-west-004
B2_ACCESS_KEY_ID=your-b2-key-id
B2_SECRET_ACCESS_KEY=your-b2-secret-key
B2_BUCKET_NAME=cv-uploads
B2_BUCKET_CV_RAW=cv-raw
B2_BUCKET_CV_FINAL=cv-final

# =============================================================================
# WORKER
# =============================================================================
WORKER_CONCURRENCY=5
